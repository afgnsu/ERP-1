<div class="page_navigation">
  <% if prev_page %>
    <span><%= link_to '《 上一页', path + "?page=#{prev_page}" %></span>
  <% end %>
  <% if prev_page and next_page %>
    &nbsp;|&nbsp;
  <% end %>
  <% if next_page %>
    <span><%= link_to '下一页 》', path + "?page=#{next_page}" %></span>
  <% end %>
</div>