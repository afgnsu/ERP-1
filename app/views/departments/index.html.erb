<div class="table_view">
  <%= link_to '新建部门', new_department_path %>
  
  <table>
    <thead>
      <tr>
        <th>编号</th>
        <th>名称</th>
        <th colspan="3" class="action">操作</th>
      </tr>
    </thead>

    <tbody>
      <% @departments.each do |department| %>
        <tr>
          <td><%= department.serial_number %></td>
          <td><%= department.name %></td>
          <td class="action"><%= link_to '查看', department %></td>
          <td class="action"><%= link_to '编辑', edit_department_path(department) %></td>
          <td class="action"><%= link_to '删除', department, method: :delete, data: { confirm: '你确定删除部门信息？' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= render partial: 'shared/page', locals: { prev_page: @prev_page, next_page: @next_page, path: departments_path } %>
</div>