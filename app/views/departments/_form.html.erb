<div class="list_view">
  <%= form_for(@department) do |f| %>
    <% if @department.errors.any? %>
      <div id="error_explanation" class="ui-state-error ui-corner-all">
          <ul>
          <% @department.errors.each do |_, message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
    <% end %>

    <table>
      <tbody>
      <% if @department.id.present? %>
        <tr>
          <td class="label">编号</td>
          <td><%= @department.serial_number %></td>
        </tr>
      <% end %>
      <tr>
        <td class="label"><%= f.label :name, '名称' %></td>
        <td><%= f.text_field :name %></td>
      </tr>
      </tbody>
    </table>

    <div class="actions">
      <%= f.submit '提交' %>
    </div>
  <% end %>
</div>