<h1>用户列表</h1>

<table>
  <thead>
    <tr>
      <th>帐户</th>
      <th>名称</th>
      <th>类型</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.account_id %></td>
        <td><%= user.name %></td>
        <td><%= user.permission %></td>
        <td><%= link_to '查看', user %></td>
        <td><%= link_to '编辑', edit_user_path(user) %></td>
        <td><%= link_to '删除', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

