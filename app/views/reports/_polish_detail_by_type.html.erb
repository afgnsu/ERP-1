<div class="report">
  <table>
    <thead>
      <tr class="title">
        <th colspan="11">打磨统计表（品种）</th>
      </tr>
    </thead>
    <tbody>
    <% @report.each do |report| %>
        <% if report[:type] %>
            <tr class="<%= report[:type] %>">
        <% else %>
            <tr>
        <% end %>
        <td ><%=report[:date] %></td>
        <td><%= report[:product_name] %></td>
        <td><%= report[:order_number] %></td>
        <td><%= data_with_precision(report[:rev_weight]) %></td>
        <td><%= data_with_precision(report[:dis_weight]) %></td>
        <td><%= report[:rev_count] %></td>
        <td><%= report[:dis_count] %></td>
        <td><%= report[:user] %></td>
        <td><%= report[:participant] %></td>
        <td><%= report[:employee_name] %></td>
        <td><%= report[:client] %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
