<div class="report">
  <table>
    <thead>
    <tr class="title">
      <th colspan= "<%= @clients.size + 3 %>" >客户往来台帐（汇总）</th>
    </tr>
    <tr>
      <th colspan= "<%= @clients.size + 3 %>" >日期：<%= @from_date.strftime("%Y-%m-%d") %> 至 <%= @to_date.strftime("%Y-%m-%d") %></th>
    </tr>
    <tr>
      <th></th>
      <th>客户</th>
      <% @clients.each do |client| %>
          <th><%= client.name %></th>
      <% end %>
      <th>合计</th>
    </tr>
    </thead>
    <tbody>
    <% @report.each do |report| %>
        <% if report[:type] %>
            <tr class="<%= report[:type] %>">
        <% else %>
            <tr>
        <% end %>
        <% report[:values].each do |value| %>
            <td><%= value %></td>
        <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>