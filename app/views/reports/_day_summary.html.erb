<div class="report">
  <table>
    <thead>
      <tr class="title">
        <th colspan="8">收发日报表（汇总）</th>
      </tr>
      <tr>
        <th>柜台</td>
        <th><%= @user.name %></th>
        <th colspan="3">日期：<%= @date.strftime("%Y-%m-%d") %></th>
        <th colspan="3"></th>
      </tr>
      <tr>
        <th>客户名</th>
        <th>上期余额</th>
        <th>交与数量</th>
        <th>收回数量</th>
        <th>余额</th>
        <th>盘点值</th>
        <th>损耗/地沙</th>
        <th>称差</th>
      </tr>
    </thead>

    <tbody>
    <% @report.each do |report| %>
      <% if report[:type] %>
      <tr class="<%= report[:type] %>">
      <% else %>
      <tr>
      <% end %>
        <td><%= report[:name] %></td>
        <td><%= report[:last_balance] %></td>
        <td><%= report[:dispatch_sum] %></td>
        <td><%= report[:receive_sum] %></td>
        <td><%= report[:balance] %></td>
        <td><%= report[:checked_balance_at_date] %></td>
        <td><%= report[:depletion] %></td>
        <td><%= report[:difference] %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>