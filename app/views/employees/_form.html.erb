<div class="list_view">
  <%= form_for(@employee) do |f| %>
    <% if @employee.errors.any? %>
      <div id="error_explanation" class="ui-state-error ui-corner-all">
        <ul>
          <% @employee.errors.each do |_, message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <table>
      <tbody>
      <% if @employee.id.present? %>
        <tr>
          <td class="label">编号</td>
          <td><%= @employee.serial_number %></td>
        </tr>
      <% end %>
      <tr>
        <td class="label"><%= f.label :name, '名称' %></td>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td class="label"><%= f.label :colleague_number, '人数' %></td>
        <td><%= f.text_field :colleague_number %></td>
      </tr>
      <tr>
        <td class="label"><%= f.label :department_id, '部门' %></td>
        <td><%= f.select :department_id, select_options_for_department %></td>
      </tr>
      </tbody>
    </table>

    <div class="actions">
      <%= f.submit '提交' %>
    </div>
  <% end %>
</div>