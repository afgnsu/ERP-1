<% if notice %>
  <div id="notice" class="ui-state-highlight">
    <%= notice %>
  </div>
<% end %>

<div class="table_view">
  <table>
    <thead>
    <th>编号</th>
    <th>名称</th>
    <th>人数</th>
    <th>部门</th>
    </thead>
    <tbody>
    <% if @employee.state == State::STATE_SHADOW %>
    <tr class="shadow">
    <% else %>
    <tr>
    <% end %>
      <td><%= @employee.serial_number %></td>
      <td><%= @employee.name %></td>
      <td><%= @employee.colleague_number %></td>
      <td><%= @employee.department.name %></td>
    </tr>
    </tbody>
  </table>
  <% unless @employee.state == State::STATE_SHADOW %>
    <%= link_to '编辑', edit_employee_path(@employee) %> |
  <% end %>
  <%= link_to '返回', employees_path(page: @page) %>
</div>