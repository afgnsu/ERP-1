<div class="table_view">
  <table>
    <thead>
      <th>编号</th>
      <th>名称</th>
      <th colspan="3" class="action"></th>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.serial_number %></td>
          <td><%= product.name %></td>
          <td class="action"><%= link_to '查看', product %></td>
          <td class="action"><%= link_to '编辑', edit_product_path(product) %></td>
          <td class="action"><%= link_to '删除', product, method: :delete, data: { confirm: "你确定删除产品\"#{product.name}\"吗？" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to '新建产品', new_product_path %>
</div>