<h1>登陆</h1>

<div>
  <% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
  <% end %>

  <%= form_tag do %>
    <div>
      <%= label_tag :serial_number, '账号' %>
      <%= text_field_tag :serial_number, params[:serial_number] %>
    </div>
    <div>
      <%= label_tag :password, '密码' %>
      <%= password_field_tag :password, params[:password] %>
    </div>
    <div>
      <%= submit_tag '登陆' %>
    </div>
  <% end %>
</div>
