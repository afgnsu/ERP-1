<% if notice %>
  <div id="notice" class="ui-state-highlight">
    <%= notice %>
  </div>
<% end %>

<% unless @is_admin %>
  <div class="button_group">
  	<%= link_to '新建记录', new_record_path, class: 'button' %>
  </div>
<% end %>

<div class="table_view">
  <table>
    <thead>
      <tr class="head">
        <th>日期</th>
        <th>类型</th>
        <th>摘要</th>
        <th>重量</th>
        <th>件数</th>
        <th>柜台</th>
        <th>交收人</th>
        <th>单号</th>
        <th>生产者</th>
        <th>客户</th>
        <% if @is_admin %>
          <th colspan="3" class="action">操作</th>
        <% else %>
          <th class="action">操作</th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @records.each do |record| %>
        <% if record.participant.id == session[:user_id] && record.user_id != session[:user_id] %>
        <tr class="as_participant">
        <% else %>
        <tr class="<%= cycle('odd', 'even') %>">
        <% end %>
          <td><%= record.date_text %></td>
          <td><%= Record::RECORD_TYPES[record.record_type] %></td>
          <td><%= record.product.try(:name) %></td>
          <td><%= record.weight %></td>
          <td><%= record.count %></td>
          <td><%= record.user.name %></td>
          <td><%= record.participant.name %></td>
          <td><%= record.order_number %></td>
          <td><%= record.employee.try(:name) %></td>
          <td><%= record.client.try(:name) %></td>
          <% if @is_admin %>
            <td class="action"><%= link_to '查看', record %></td>
            <td class="action"><%= link_to '编辑', edit_record_path(record) %></td>
            <td class="action"><%= link_to '删除', record, method: :delete, data: { confirm: '你确定删除记录？' } %></td>
          <% else %>
            <td class="action"><%= link_to '复制', new_record_path(record: record) %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= render partial: 'shared/page', locals: { prev_page: @prev_page, next_page: @next_page, path: records_path } %>
</div>
