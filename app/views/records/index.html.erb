<h1>记录列表</h1>

<table>
  <thead>
    <tr>
      <th>类型</th>
      <th>原料</th>
      <th>成品</th>
      <th>重量</th>
      <th>数量</th>
      <th>柜台</th>
      <th>客户</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= text_for_record_type record.record_type %></td>
        <td><%= record.origin.name %></td>
        <td><%= record.product.name %></td>
        <td><%= record.weight %></td>
        <td><%= record.count %></td>
        <td><%= record.user.name %></td>
        <td><%= record.participant.name %></td>
        <td><%= link_to '查看', record %></td>
        <td><%= link_to '编辑', edit_record_path(record) %></td>
        <td><%= link_to '删除', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

